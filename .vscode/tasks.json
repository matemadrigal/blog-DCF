{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Streamlit: Run app.py",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/streamlit",
      "args": ["run", "${workspaceFolder}/app.py"],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
